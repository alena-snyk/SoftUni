@page
@model MyLibrary.Pages.Borrower.AddModel
@{
    ViewData["Title"] = "Add";
}

<div class="container">
	<h2>Add new borrower</h2>
	<form method="post">
		<div asp-validation-summary="All"></div>
		<div class="form-group">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" type="text" class="form-control" placeholder="Name">
			<span asp-validation-for="Name"></span>
		</div>
		<div class="form-group">
			<label asp-for="Address">Address</label>
			<input asp-for="Address" type="text" class="form-control" placeholder="Address">
			<span asp-validation-for="Address"></span>
		</div>

		<button type="submit" class="btn btn-success">Add Borrower</button>
		<a asp-page="/Index" class="btn ">Cancel</a>
	</form>

</div>

