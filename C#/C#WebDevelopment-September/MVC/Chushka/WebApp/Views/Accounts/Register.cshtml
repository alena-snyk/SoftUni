@model WebApp.ViewModels.Account.RegisterViewModel
@{
	ViewData["Title"] = "Register";
}
<main class="mt-3">
	<h1 class="text-center">Register</h1>
	<hr class="bg-secondary half-width" />
	<form class="mx-auto half-width" method="post" asp-action="Register" asp-controller="Accounts">
		<div asp-validation-summary="ModelOnly"></div> 
		<div class="form-group">
			<label asp-for="Username"></label>
			<input asp-for="Username" class="form-control" placeholder="Username..."/>
			<span asp-validation-for="Username"></span>
		</div>
		<div class="form-group">
			<label asp-for="Password"></label>
			<input asp-for="Password" class="form-control" placeholder="Password..." />
			<span asp-validation-for="Password"></span>
		</div>
		<div class="form-group">
			<label asp-for="ConfirmPassword"></label>
			<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password..." />
			<span asp-validation-for="ConfirmPassword"></span>
		</div>
		<div class="form-group">
			<label asp-for="FullName"></label>
			<input asp-for="FullName" class="form-control" placeholder="Fullname..." />
			<span asp-validation-for="FullName"></span>
		</div>
		<div class="form-group">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" placeholder="Email..." />
			<span asp-validation-for="Email"></span>
		</div>
		<div class="d-flex justify-content-center">
			<button type="submit" class="btn chushka-bg-color">Register</button>
		</div>
	</form>
</main>

