@using WebApp.Utilities
@{
	var user = this.User.Identity.Name;
}
<header>
	<nav class="navbar navbar-expand-lg chushka-bg-color">
		<a class="navbar-brand nav-link-white" asp-controller="Home" asp-action="Index">CHUSHKA</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link nav-link-white" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				@if (User.IsInRole(GlobalConstants.AdminRoleText))
				{
					<li class="nav-item">
						<a class="nav-link nav-link-white" asp-controller="Products" asp-action="Create">Create Product</a>
					</li>
					<li class="nav-item">
						<a class="nav-link nav-link-white" asp-controller="Orders" asp-action="All">All Orders</a>
					</li>
				}
				@if (!User.Identity.IsAuthenticated)
				{
					<li class="nav-item">
						<a class="nav-link nav-link-white" asp-controller="Accounts" asp-action="Login">Login</a>
					</li>
					<li class="nav-item">
						<a class="nav-link nav-link-white" asp-controller="Accounts" asp-action="Register">Register</a>
					</li>
				}
			</ul>
			@if (User.Identity.IsAuthenticated)
			{
				<ul class="navbar-nav left-side">
					<li class="nav-item">
						<div class="nav-link nav-link-white">@this.User.Identity.Name</div>
					</li>
					<li class="nav-item">
						<a class="nav-link nav-link-white" asp-controller="Accounts" asp-action="Logout">Logout</a>
					</li>
				</ul>
			}

		</div>
	</nav>
</header>