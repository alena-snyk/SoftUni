@using Eventures.WebApp.Utilities
@{
    ViewData["Title"] = "Home Page";
}
@if(!this.User.Identity.IsAuthenticated)
{
<main class="mx-auto container" >
	<div class="jumbotron mt-3 eventures-bg-color p-5">
		<h1>Eventures - The best ticket service in the world.</h1>		
		<hr class="bg-dark hr-2" />
		<h3><a asp-action="Login" asp-controller="Account">Login</a> to start "eventing".</h3>
		<h3><a asp-action="Register" asp-controller="Account">Register</a> if you don't have an account.</h3>
	</div>
</main>
}
else
{
	<main class="mx-auto container" >
		<div class="jumbotron mt-3 eventures-bg-color p-5">
			@if (this.User.IsInRole(GlobalConstants.AdminRoleText))
			{
			<h1 class="text-center">Greetings, Administrator - @this.User.Identity.Name!</h1>
			<hr class="hr-5" />
			<h5 class="text-center gray">Enjoy your work.</h5>
			}
			else
			{
				<h1 class="text-center">Welcome @this.User.Identity.Name!</h1>
				<hr class="hr-5" />
				<h5 class="text-center gray">Eventures wishes you an exciting experience.</h5>
			}
		</div>
	</main>
}
