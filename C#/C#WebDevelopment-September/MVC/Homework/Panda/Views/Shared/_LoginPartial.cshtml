@using Microsoft.AspNetCore.Identity
@using Panda.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{

<ul class="nav navbar-nav navbar-right">
	<li class="nav-item"><a class="nav-link nav-link-white active" asp-area="" asp-controller="Receipts" asp-action="Index">Receipts</a></li>
	<li class="nav-item">
		<a class="nav-link nav-link-white active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
	</li>
	<li class="nav-item"><a class="nav-link nav-link-white active" asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
</ul>

}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li class="nav-item"><a class="nav-link nav-link-white active" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
		<li class="nav-item"><a class="nav-link nav-link-white active" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
	</ul>
}